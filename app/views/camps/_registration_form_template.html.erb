<div id="form-template">
  <% @registration = Registration.new %>
  <!-- now the form template itself -->
  <div class="row">
    <div class="col">
      <h5>New Student:</h5>
      <%= simple_form_for(@registration) do |f| %>
        <%= f.error_notification %>
        <div class="row">
          <div class="form-inputs">
            <% if logged_in? && ( current_user.role?(:admin) ) %>
              <%= f.input :student_id, collection: Student.active.alphabetical.to_a, include_blank: true %>
            <% elsif current_user.role?(:parent) %>
              <%= f.input :student_id, collection: Family.where(user_id: current_user).first.students.active.alphabetical.to_a, include_blank: true %>
            <% end %>

            <%= f.input :camp_id, as: :hidden, input_html: { value: @camp.id } %>
          </div>
        </div>
        <div class="row">
          <div class="form-actions col s8">
            <%= f.button :submit %>
          </div>
        </div>
      <% end %>
    </div>
  </div>

</div>