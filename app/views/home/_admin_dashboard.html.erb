            borderDash: [5, 5],
            borderColor: 'rgba(247, 160, 114, 1)',
            fill: false
        }]
    },
     options: {
        responsive: true,
        legend: {
            position: 'top',
            labels: {
                fontFamily: "'Sofia Pro', sans-serif"
            }
        },
        title: {
            display: true,
            text: 'Registrations in the Last Few Months',
            fontSize: 20,
            fontFamily: "'Sofia Pro', sans-serif",
            fontStyle: '500'
        },
        scales: {
            yAxes: [
                {
                    ticks: 
                    {
                        fontSize: 12, fontFamily: "'Sofia Pro', sans-serif", fontColor: '#000', fontStyle: '500'
                    },
                    display: true,
                    scaleLabel: {
                        display: true,
