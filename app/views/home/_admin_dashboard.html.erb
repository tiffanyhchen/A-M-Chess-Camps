<script>
var ctx = document.getElementById("reg-vs-time").getContext('2d');
var chart1 = new Chart(ctx, {
    type: 'line',
    data: {
        labels: ["January", "February", "March", "April", "May", "June"],
        datasets: [{
            label: "This Year",
            data: [3, 6, 24, 19, 37, 15],
            backgroundColor:'rgba(15, 163, 177, 0.2)',
