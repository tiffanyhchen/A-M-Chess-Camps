<div class="row">

<div class= "col s4">
  <p id="notice"><%= notice %></p>
  <h3>Locations</h3>
  <p>
    We are a Pittsburgh based chess camp. See our locations to figure what works best for you.
  </p>
</div>

<div class="col s8">
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Address</th>
        <th>Max Capacity</th>
        <% if logged_in? && ( current_user.role?(:admin) ) %>
          <th colspan="3"></th>
        <% end %>
      </tr>
    </thead>

    <tbody>
      <% locations.each do |location| %>
        <tr>
          <td><%= link_to location.name, location %></td>
          <td><%= render :partial => "partials/address_info", locals: {location: location} %></td>
          <td><%= location.max_capacity %></td>
          <% if logged_in? && ( current_user.role?(:admin) ) %>
            <td><%= link_to 'Edit', edit_location_path(location), :class=>"btn waves-effect waves-light" %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>

  <span class="paginate">
    <%= will_paginate locations, :previous_label => "<", :next_label => ">" %>
  </span>
</div>