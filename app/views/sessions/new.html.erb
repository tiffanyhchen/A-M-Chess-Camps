<div class="body-content">
  <div class="row">
    <div class="col s12">
      <div class="card lighten-4" id="login-card">
        <div class="card-content">
          <div class="description-title">login</div>
            <br />
            <%= form_with url: sessions_path, local: true do |f| %>
            <div class="control-group">
              <%= f.label :username %>
              <div class="controls">
                <%= f.text_field :username %>
              </div>
            </div>

            <div class="control-group">
              <%= f.label :password %>
              <div class="controls">
                <%= f.password_field :password %>
              </div>
            </div>
            
            <div class="actions"><%= f.submit "Log In", class: 'waves-effect waves-light btn' %></div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>