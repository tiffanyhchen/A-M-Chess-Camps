<table class="highlight">
  <thead>
    <th>Username</th>
    <th class="align_center">Role</th>
    <th class="align_center">Active?</th>
    <th class="align_center">Options</th>
  </thead>
  <% for user in @users %>
    <tr class="<%= cycle('dg_list_line_odd', 'dg_list_line_even') %>">
      <td><%= user.username %></td>
      <td class="align_center"><%= user.role %></td>
      <td class="align_center"><%= user.active ? "Yes" : "No" %></td>
      <td class="align_center">
        <% if can? :edit, user %>
          <%= link_to edit_user_path(user) do %>
            <i class="material-icons">edit</i>
          <% end %> 
        <% end %>
      </td>
    </tr>
  <% end %>
</table>
<br />
  <span class="paginate center">
    <%= will_paginate @users, :previous_label => "<", :next_label => ">", :param_name => 'users' %>
  </span>
<br />